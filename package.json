{
  "name": "css-calc-transform",
  "version": "1.0.0",
  "description": "Transform CSS properties with calc() values to pixels based on window and element dimensions.",
  "main": "dist/index.js",
  "author": "Krister Kari",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "!**/__tests__",
    "!**/__mocks__",
    "!**/perf-tests",
    "index.d.ts",
    "CHANGELOG.md",
    "README.md"
  ],
  "keywords": [
    "Javascript",
    "CSS-in-JS",
    "styles",
    "CSS",
    "calc",
    "calc-function"
  ],
  "bugs": {
    "url": "https://github.com/kristerkari/css-calc-transform/issues"
  },
  "homepage": "https://github.com/kristerkari/css-calc-transform#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kristerkari/css-calc-transform.git"
  },
  "scripts": {
    "size": "npm run build && size-limit",
    "prepublish": "npm run build",
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --ignore src/__tests__,src/__mocks__",
    "precommit": "lint-staged",
    "release": "npmpub",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@size-limit/preset-small-lib": "^8.0.1",
    "babel-jest": "^29.0.3",
    "coveralls": "^3.0.1",
    "husky": "^8.0.1",
    "jest": "^29.0.1",
    "lint-staged": "^15.2.2",
    "npmpub": "^5.1.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "size-limit": "^8.0.1"
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none"
  },
  "size-limit": [
    {
      "limit": "2 KB",
      "path": "dist/index.js"
    }
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "coverageDirectory": "./.coverage/",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  }
}
